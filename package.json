{
    "name": "ivent-server",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "remove-src": "rm -rf ./src",
        "clean": "rm -rf ./dist",
        "compile": "npx tsc",
        "build": "npm run clean; npm run compile",
        "start": "node ./dist",
        "start:dev": "npx ts-node src --openssl-legacy-provider",
        "commitlint": "npx commitlint --edit",
        "lint-check": "npx eslint .",
        "lint-fix": "npx eslint . --fix",
        "prettier-check": "npx prettier --check \"src/**/*.+(js|ts|json)\"",
        "prettier-fix": "npx prettier --write \"src/**/*.+(js|ts|json)\"",
        "postinstall": "if [ -e .git ]; then npx patch-package && npx husky install; else echo 'postinstall was not executed cause cannot find .git'; fi",
        "pre-commit": "if [ -e .git ]; then npm run lint-check && npx lint-staged && npm run build; else echo 'pre-commit was not executed cause cannot find .git'; fi"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/iVent-team/iVent-server.git"
    },
    "author": "iVent-team",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/iVent-team/iVent-server/issues"
    },
    "homepage": "https://github.com/iVent-team/iVent-server#readme",
    "lint-staged": {
        "**/*.{ts,tsx,js,jsx}": [
            "npm run prettier-fix",
            "npm run lint-fix"
        ]
    },
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/body-parser": "^1.19.5",
        "@types/cookie-parser": "^1.4.6",
        "@types/cors": "^2.8.17",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/multer": "^1.4.11",
        "@types/redis": "^4.0.11",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^6.12.0",
        "commitlint": "^18.4.3",
        "conventional-changelog-conventionalcommits": "^7.0.2",
        "eslint": "^8.54.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.1",
        "husky": "^8.0.3",
        "patch-package": "^8.0.0",
        "prettier": "^3.1.0"
    },
    "dependencies": {
        "axios": "^1.6.2",
        "body-parser": "^1.20.2",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "moment": "^2.29.4",
        "multer": "^1.4.5-lts.1",
        "pg": "^8.11.3",
        "redis": "^4.6.11",
        "typeorm": "^0.3.17",
        "ulid": "^2.3.0",
        "winston": "^3.11.0",
        "winston-daily-rotate-file": "^4.7.1"
    }
}
